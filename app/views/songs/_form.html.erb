<%= form_for [@artist, @song], url: artist_songs_path, html: { multipart: true } do |f| %>
<div class="fsongoup">
  <label>Title:</label>
  <%= f.text_field :song_title, placeholder: "Song title", class: "form-control" %>

  <div class="form-group">
    <label>Duration:</label>
    <%= f.text_field :duration, placeholder: "eg. 03:40", class: "form-control" %>
  </div>

<hr>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-success" %>
    <%= link_to "Back", artist_path(@artist), class: "btn btn-default" %>
 </div>
</div>
<%end%>
