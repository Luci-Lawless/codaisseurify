<%= form_for [@artist, @song], url: artist_songs_path, html: { multipart: true } do |f| %>
<% if @song.errors.any? %>
 <h3>Errors:</h3>
   <ul>
     <%@song.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
<% end %>
<div class="fsongoup">
  <label>Title:</label>
  <%= f.text_field :song_title, placeholder: "Song title", class: "form-control", id:"titleInput" %>

  <div class="form-group">
    <label>Duration:</label>
    <%= f.text_field :duration, placeholder: "eg. 03:40", class: "form-control", id: "durationInput" %>
  </div>

<hr>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-danger", id: "add_title" %>
    <%= link_to "Back", artist_path(@artist), class: "btn btn-default" %>
 </div>
</div>
<%end%>
